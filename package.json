{
  "name": "estebanborai.com",
  "version": "0.2.4",
  "scripts": {
    "dev": "svelte-kit dev",
    "build": "svelte-kit build",
    "deploy:production": "pnpm run build && pnpm run wrangler:publish:production",
    "deploy:staging": "pnpm run build && pnpm run wrangler:publish:staging",
    "package": "svelte-kit package",
    "preview": "svelte-kit preview",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --ignore-path .gitignore --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
    "format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. .",
    "wrangler:publish:production": "wrangler publish --env production",
    "wrangler:publish:staging": "wrangler publish --env staging"
  },
  "devDependencies": {
    "@cloudflare/wrangler": "^1.19.7",
    "@sentry/browser": "^6.17.3",
    "@sentry/tracing": "^6.17.3",
    "@sveltejs/adapter-cloudflare-workers": "^1.0.0-next.30",
    "@sveltejs/kit": "^1.0.0-next.251",
    "@tailwindcss/forms": "^0.4.0",
    "@tailwindcss/typography": "^0.5.0",
    "@types/remarkable": "^2.0.3",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.1",
    "autoprefixer": "^10.4.1",
    "cssnano": "^5.0.14",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-svelte3": "^3.2.1",
    "graphql": "^16.2.0",
    "highlight.js": "^11.4.0",
    "mdsvex": "^0.10.5",
    "phosphor-svelte": "^1.1.2",
    "postcss": "^8.4.5",
    "prettier": "^2.4.1",
    "prettier-plugin-svelte": "^2.4.0",
    "remarkable": "^2.0.1",
    "svelte": "^3.44.0",
    "svelte-check": "^2.2.6",
    "svelte-preprocess": "^4.10.1",
    "tailwindcss": "^3.0.8",
    "tslib": "^2.3.1",
    "typescript": "^4.4.3"
  },
  "type": "module"
}
